{
  "kind": "collectionType",
  "collectionName": "machine_statuses",
  "info": {
    "singularName": "machine-status",
    "pluralName": "machine-statuses",
    "displayName": "Machine Status"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "machineId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["operational", "maintenance", "offline"],
      "default": "operational"
    },
    "statusMessage": {
      "type": "string",
      "default": "Operationeel"
    },
    "bottlesCollected": {
      "type": "integer",
      "default": 0
    },
    "cansCollected": {
      "type": "integer",
      "default": 0
    },
    "lastUpdated": {
      "type": "datetime"
    },
    "location": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    }
  }
}

